@{
    ViewData["Title"] = "Assign Employee Shift";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #09b0e5 0%, #004789 100%);
        --secondary-gradient: linear-gradient(135deg, #f06daa 0%, #f33737 100%);
        --success-color: #10b981;
        --border-radius: 15px;
    }

    .assign-card {
        border-radius: var(--border-radius);
        border: none;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        background: white;
    }

    .assign-header {
        padding: 2rem;
        background: var(--primary-gradient);
        color: white;
        position: relative;
        overflow: hidden;
    }

        .assign-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .assign-header h5 {
            margin: 0 0 0.5rem 0;
            font-size: 1.5rem;
            font-weight: 600;
            position: relative;
            z-index: 1;
        }

        .assign-header small {
            opacity: 0.9;
            position: relative;
            z-index: 1;
        }

    .form-block {
        background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
        padding: 2rem;
        border-radius: var(--border-radius);
        margin-bottom: 1.5rem;
        border: 2px solid rgba(102, 126, 234, 0.1);
        transition: all 0.3s ease;
    }

        .form-block:hover {
            border-color: rgba(102, 126, 234, 0.3);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.1);
        }

    .block-title {
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #1e293b;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .block-title::before {
            content: '';
            width: 4px;
            height: 24px;
            background: var(--primary-gradient);
            border-radius: 4px;
        }

    .form-label {
        font-weight: 600;
        color: #475569;
        margin-bottom: 0.75rem;
        font-size: 0.85rem;
    }

        .form-label.required::after {
            content: '*';
            color: #ef4444;
            margin-left: 4px;
        }

    .form-control,
    .form-select {
        border: 1px solid #e2e8f0;
        border-radius: 10px;
        padding: 0.875rem 1rem;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        background: white;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #1d6ba0e6;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    /* Multi-Select Dropdown Styles */
    .multi-select-wrapper {
        position: relative;
    }

    .multi-select-button {
        width: 100%;
        text-align: left;
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 10px;
        padding: 0.675rem 1rem;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        justify-content: space-between;
        align-items: center;
        min-height: 50px;
    }

        .multi-select-button:hover {
            border-color: #cbd5e1;
            background: #f8fafc;
        }

        .multi-select-button:focus,
        .multi-select-button.active {
            border-color: #117db4;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            outline: none;
        }

        .multi-select-button .selected-text {
            color: #022b46;
            font-weight: 500;
            flex: 1;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            margin-right: 0.5rem;
        }

        .multi-select-button .arrow {
            transition: transform 0.3s ease;
            color: #3885bc;
            font-size: 0.8rem;
            font-weight: bold;
        }

        .multi-select-button.active .arrow {
            transform: rotate(180deg);
        }

    .multi-select-dropdown {
        /* position: absolute; */
        top: calc(100% + 0.5rem);
        left: 0;
        right: 0;
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 10px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        z-index: 1000;
        max-height: 340px;
        overflow-y: auto;
        display: none;
        animation: slideDown 0.3s ease;
    }

    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .multi-select-dropdown.show {
        display: block;
    }

    .multi-select-search {
        padding: 0.6rem;
        border-bottom: 1px solid #f1f5f9;
        position: sticky;
        top: 0;
        background: white;
        z-index: 1;
    }

        .multi-select-search input {
            width: 100%;
            padding: 0.55rem 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 7px;
            font-size: 0.8rem;
            transition: all 0.3s ease;
        }

            .multi-select-search input:focus {
                border-color: #667eea;
                outline: none;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }

    .multi-select-options {
        padding: 0.5rem;
    }

    .multi-select-option {
        padding: 0.375rem 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.675rem;
        cursor: pointer;
        border-radius: 7px;
        transition: all 0.2s ease;
        margin-bottom: 0.15rem;
    }

        .multi-select-option:hover {
            background: #f8f9ff;
        }

        .multi-select-option.selected {
            background: linear-gradient(135deg, #f0f4ff 0%, #e8edff 100%);
        }

    .multi-select-checkbox {
        width: 18px;
        height: 18px;
        border: 1px solid #cbd5e1;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        flex-shrink: 0;
    }

    .multi-select-option.selected .multi-select-checkbox {
        background: var(--primary-gradient);
        border-color: #397a9ecc;
    }

    .multi-select-checkbox::after {
        content: '✓';
        color: white;
        font-size: 0.8rem;
        font-weight: bold;
        display: none;
    }

    .multi-select-option.selected .multi-select-checkbox::after {
        display: block;
    }

    .multi-select-label {
        flex: 1;
        color: #334155;
        font-size: 0.85rem;
    }

    .multi-select-option.selected .multi-select-label {
        color: #1e293b;
        font-weight: 500;
    }

    .multi-select-actions {
        padding: .5rem;
        border-top: 1px solid #f1f5f9;
        display: flex;
        justify-content: space-between;
        gap: 0.55rem;
        background: #f8fafc;
        position: sticky;
        bottom: 0;
    }

        .multi-select-actions button {
            flex: 1;
            padding: 0.325rem 0.5rem;
            border: none;
            border-radius: 8px;
            font-size: 0.775rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
        }

    .select-all-btn {
        background: #0d6fb1;
        color: white;
    }

        .select-all-btn:hover {
            background: #5568d3;
            transform: translateY(-1px);
        }

    .clear-all-btn {
        background: white;
        color: #64748b;
        border: 2px solid #e2e8f0;
    }

        .clear-all-btn:hover {
            background: #f8fafc;
            border-color: #cbd5e1;
        }

    .selected-count {
        background: var(--primary-gradient);
        color: white;
        padding: 0.15rem 0.5rem;
        border-radius: 15px;
        font-size: 0.675rem;
        font-weight: 600;
        margin-left: 0.5rem;
    }

    .action-bar {
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
        padding-top: 0.8rem;
    }

    .btn {
        padding: 0.875rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.8rem;
        transition: all 0.3s ease;
        border: none;
    }

    .btn-primary {
        background: var(--primary-gradient);
        color: white;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
        }

    .btn-secondary {
        background: #f1f5f9;
        color: #64748b;
    }

        .btn-secondary:hover {
            background: #e2e8f0;
        }

    /* Scrollbar Styling */
    .multi-select-dropdown::-webkit-scrollbar {
        width: 8px;
    }

    .multi-select-dropdown::-webkit-scrollbar-track {
        background: #f1f5f9;
        border-radius: 10px;
    }

    .multi-select-dropdown::-webkit-scrollbar-thumb {
        background: #cbd5e1;
        border-radius: 10px;
    }

        .multi-select-dropdown::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }

    /* Employee Option with Avatar */
    .employee-option {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .employee-avatar {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: var(--primary-gradient);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.675rem;
        flex-shrink: 0;
    }

    .employee-info {
        flex: 1;
    }

    .employee-name {
        font-weight: 500;
        color: #1e293b;
        font-size: 0.85rem;
    }

    .employee-id {
        font-size: 0.7rem;
        color: #94a3b8;
        margin-top: 1px;
    }

    .no-results {
        padding: 1rem;
        text-align: center;
        color: #94a3b8;
        font-size: 0.8rem;
    }
</style>

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">DRCTS</a></li>
                    <li class="breadcrumb-item"><a href="#">Master</a></li>
                    <li class="breadcrumb-item active">Department</li>
                </ol>
            </div>
            <h4 class="page-title">Assign Employee Shift</h4>
        </div>
        <!--end page-title-box-->
    </div>
    <!--end col-->
</div>

<div class="card assign-card">   
    <div class="card-body">
        <!-- Section 1: Office & Shift -->
        <div class="form-block">
            <h6 class="block-title">Office & Shift Section</h6>

            <div class="row g-4">
                <div class="col-md-3">
                    <label class="form-label required">Office</label>
                    <div class="multi-select-wrapper">
                        <button type="button" class="multi-select-button" data-target="officeDropdown">
                            <span class="" id="officeSelected">-- Select Office --</span>
                            <span class="arrow">▼</span>
                        </button>
                        <div class="multi-select-dropdown" id="officeDropdown">
                            <div class="multi-select-search">
                                <input type="text" placeholder="Search offices..." class="search-input">
                            </div>
                            <div class="multi-select-options">
                                
                            </div>
                            <div class="multi-select-actions">
                                <button type="button" class="select-all-btn">Select All</button>
                                <button type="button" class="clear-all-btn">Clear All</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label required">Shift</label>
                    <div class="multi-select-wrapper">
                        <button type="button" class="multi-select-button" data-target="shiftDropdown">
                            <span class="" id="shiftSelected">-- Select Shift --</span>
                            <span class="arrow">▼</span>
                        </button>
                        <div class="multi-select-dropdown" id="shiftDropdown">
                            <div class="multi-select-search">
                                <input type="text" placeholder="Search shifts..." class="search-input">
                            </div>
                            <div class="multi-select-options">
                               
                            </div>
                           @*  <div class="multi-select-actions">
                                <button type="button" class="select-all-btn">Select All</button>
                                <button type="button" class="clear-all-btn">Clear All</button>
                            </div> *@
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Department</label>
                    <select class="form-select" id="dept">
                        <option value="">-- Select Department --</option>                       
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Designation</label>
                    <select class="form-select" id="subDept">
                        <option value="">-- Select Designation --</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Section 2: Employee & Validity -->
        <div class="form-block">
            <h6 class="block-title">Employee Selection & Validity Period</h6>

            <div class="row g-4">
                <div class="col-md-4">
                    <label class="form-label required">Employee</label>
                    <div class="multi-select-wrapper">
                        <button type="button" class="multi-select-button" data-target="employeeDropdown">
                            <span class="" id="employeeSelected">-- Select Employee --</span>
                            <span class="arrow">▼</span>
                        </button>
                        <div class="multi-select-dropdown" id="employeeDropdown">
                            <div class="multi-select-search">
                                <input type="text" placeholder="Search employees..." class="search-input">
                            </div>
                            <div class="multi-select-options">
                               
                            </div>
                            <div class="multi-select-actions">
                                <button type="button" class="select-all-btn">Select All</button>
                                <button type="button" class="clear-all-btn">Clear All</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label required">From Date</label>
                    <input type="date" class="form-control" id="fromDate" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">To Date</label>
                    <input type="date" class="form-control" id="toDate" />
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-bar">
            <button type="button" class="btn btn-secondary" id="btnCancel">
                Cancel
            </button>
            <button type="button" class="btn btn-primary" id="btnAssignShift">
                Assign Shift
            </button>
        </div>

    </div>
</div>

<!-- Javascript  -->
<script src="~/js/jquery-3.6.4.min.js"></script>
<script src="~/js/assign/assignemployeeshift.js"></script>
