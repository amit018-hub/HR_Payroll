
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">DRCTS</a>
                    </li><!--end nav-item-->
                    <li class="breadcrumb-item">
                        <a href="#">Dashboard</a>
                    </li><!--end nav-item-->
                    <li class="breadcrumb-item active">Analytics Dashboard </li>
                </ol>
            </div>
            <h4 class="page-title">Analytics</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<!-- end page title end breadcrumb -->
<!-- end page title end breadcrumb -->

<!-- KPI Cards -->
<div class="row">
    <!-- Total Employees -->
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="row d-flex justify-content-center">
                    <div class="col-9">
                        <p class="text-dark mb-0 fw-semibold">Total Employees</p>
                        <h3 class="my-1 fw-bold" id="totalEmployees">0</h3>
                        <p class="mb-0 text-muted">
                            <span class="text-success">
                                <i class="mdi mdi-trending-up"></i>2.1%
                            </span> Increase This Month
                        </p>
                    </div>
                    <div class="col-3 align-self-center">
                        <div class="thumb-md bg-light-alt rounded-circle text-center">
                            <i class="ti ti-users font-24 text-muted"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Present Today -->
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="row d-flex justify-content-center">
                    <div class="col-9">
                        <p class="text-dark mb-0 fw-semibold">Present Today</p>
                        <h3 class="my-1 fw-bold" id="presentToday">0</h3>
                        <p class="mb-0 text-muted text-truncate" id="presentPercentage">
                            <span class="text-success">
                                <i class="mdi mdi-trending-up"></i>0%
                            </span> Attendance Rate
                        </p>
                    </div>
                    <div class="col-3 align-self-center">
                        <div class="thumb-md bg-light-alt rounded-circle text-center">
                            <i class="ti ti-clock font-24 text-muted"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- On Leave -->
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="row d-flex justify-content-center">
                    <div class="col-9">
                        <p class="text-dark mb-0 fw-semibold">On Leave</p>
                        <h3 class="my-1 fw-bold" id="leaveToday">0</h3>
                        <p class="mb-0 text-muted text-truncate" id="leavePercentage">
                            <span class="text-danger">
                                <i class="mdi mdi-trending-down"></i>0%
                            </span> Employees On Leave
                        </p>
                    </div>
                    <div class="col-3 align-self-center">
                        <div class="thumb-md bg-light-alt rounded-circle text-center">
                            <i class="ti ti-activity font-24 text-muted"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- WFH / Remote -->
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="row d-flex justify-content-center">
                    <div class="col-9">
                        <p class="text-dark mb-0 fw-semibold">Working From Home</p>
                        <h3 class="my-1 fw-bold" id="wfhCount">0</h3>
                        <p class="text-muted text-truncate mb-0" id="wfhPercentage">
                            <span class="text-success">
                                <i class="mdi mdi-trending-up"></i>0%
                            </span> WFH Today
                        </p>
                    </div>
                    <div class="col-3 align-self-center">
                        <div class="thumb-md bg-light-alt rounded-circle text-center">
                            <i class="ti ti-confetti font-24 text-muted"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- Row end -->
<!-- Attendance / Leave Analytics -->
<div class="row">
    <div class="col-lg-9">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h4 class="card-title">Attendance Overview</h4>
                    </div>
                    <div class="col-auto">
                        <span class="text-muted small">Last 30 Days</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div id="attendance_chart" class="apex-charts" style="min-height: 365px;">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="text-muted mt-2">Loading chart data...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Leave Types -->
    <div class="col-lg-3">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Leave Summary</h4>
            </div>
            <div class="card-body">
                <div id="leave_chart" class="apex-charts" style="min-height: 280px;">
                    <div class="text-center py-3">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>

                <table class="table table-sm mt-3" id="leaveTypeTable">
                    <thead>
                        <tr>
                            <th>Leave Type</th>
                            <th class="text-end">Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="2" class="text-center text-muted">
                                <small>Loading...</small>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Recent Attendance -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h4 class="card-title">Recent Attendance</h4>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-sm btn-outline-primary" onclick="loadDashboardData()">
                            <i class="mdi mdi-refresh"></i> Refresh
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="recentAttendanceTable">
                        <thead class="table-light">
                            <tr>
                                <th>Employee</th>
                                <th>Date</th>
                                <th>Check In</th>
                                <th>Check Out</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="spinner-border spinner-border-sm text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <span class="text-muted ms-2">Loading attendance data...</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Loading Overlay (Optional) -->
<div id="dashboard-loader" style="display: none;">
    <div class="position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
         style="background: rgba(0,0,0,0.3); z-index: 9999;">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>

<!-- Javascript  -->
<script src="~/js/jquery-3.6.4.min.js"></script>
<script src="~/assets/libs/apexcharts/apexcharts.min.js"></script>
<script src="~/assets/js/pages/analytics-index.init.js"></script>
<script src="~/js/dashboard/admin_dashboard.js"></script>